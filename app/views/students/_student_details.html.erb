<dl class="dl-horizontal">
  <% [:name, :fathers_name, :email, :gender, :dob, :phone, :address].each do |property| %>
    <dt><%= property.to_s.gsub("_"," ").titlecase %></dt>
    <dd>
      <% if property == :gender %>
        <%= Student::Gender.label(student.gender) %>
      <% elsif property == :dob %>
        <%= student.send(property).strftime("%B %-d, %Y") %>
      <% else %>
        <%= student.send(property) %>
      <% end %>
    </dd>
  <% end %>
</dl>
